{
  "permissions": {
    "deny": [
      "Bash(echo:*)",
      "Bash(printf:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(perl:*)",
      "Read($PWD/.claude/tdd-guard/**)"
    ]
  },
  "env": {
    "MAX_THINKING_TOKENS": "31999"
  },
  "statusLine": {
    "type": "command",
    "command": ".claude/statusline.sh",
    "padding": 0
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Edit|MultiEdit|Write",
        "hooks": [
          { 
            "type": "command",
            "command": "uv run .claude/hooks/pre_tools/sensitive_file_access_validator.py"
          },
          { 
            "type": "command",
            "command": "uv run .claude/hooks/pre_tools/tmp_creation_blocker.py"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit|Write|Bash",
        "hooks": [
          { 
            "type": "command",
            "command": "uv run .claude/hooks/pre_tools/uv_dependency_blocker.py"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          { 
            "type": "command",
            "command": "uv run .claude/hooks/pre_tools/file_naming_enforcer.py"
          },
          { 
            "type": "command",
            "command": "uv run .claude/hooks/pre_tools/coding_naming_enforcer.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          { 
            "type": "command",
            "command": "uv run .claude/hooks/pre_tools/destructive_command_blocker.py"
          },
          { 
            "type": "command",
            "command": "uv run .claude/hooks/pre_tools/lint_argument_enforcer.py"
          },
          { 
            "type": "command",
            "command": "uv run .claude/hooks/pre_tools/uv_workflow_enforcer.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/post_tools/unified_python_antipattern_hook.py"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/post_tools/formatting/ruff_checking.py"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/post_tools/formatting/basedpyright_checking.py"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/post_tools/formatting/vulture_checking.py"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/post_tools/block_sys_path_manipulation.py"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/post_tools/code_similarity_check.py"
          }
        ]
      }
    ],

    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/notification/notification_logger.py --notify"
          }
        ]
      }
    ]
  }
}